<div class="panel panel-default">
	<div class="panel-body">
		<h1>Music request Edit</h1><br>
	<%= form_tag({ action: "update" }, method: "PUT") do %>
	<div class="form-group">
		<label>Name</label>
		<input type="text" name="name" class="form-control" value="<%= @music[1] %>">
	</div>
	<div class="form-group">
		<label>Content</label>
		<textarea class="form-control" name="content" ><%= @music[2].strip %></textarea>
	</div>
		<div class="checkbox">
			<label>
				<%= check_box_tag "is_approve", "1", !@music[3].blank?, {class: "checkbox"} %>
				Approve
			</label>
		</div>
		<button class="btn btn-default">Update</button>

	<% end %>
	</div>
</div>